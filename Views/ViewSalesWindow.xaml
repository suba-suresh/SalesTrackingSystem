<Window x:Class="SalesTrackingSystem.Views.ViewSalesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sales Analytics"
        Icon="/Images/logo.ico"
        Height="650" Width="1100"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <Window.Resources>
        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Sales Analytics Dashboard"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#222"
                   Margin="0,0,0,5"/>
        <TextBlock Grid.Row="0"
                   Text="— view daily/monthly/yearly reports"
                   FontSize="14"
                   Foreground="Gray"
                   Margin="280,5,0,0"/>

        <!-- Controls -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,20,0,15" VerticalAlignment="Center">
            <TextBlock Text="Select Date:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker SelectedDate="{Binding SelectedDate}" Width="150" Margin="0,0,10,0"/>
            <Button Content="Daily View" Command="{Binding DailyViewCommand}" Style="{StaticResource FilterButtonStyle}"/>
            <Button Content="Monthly View" Command="{Binding MonthlyViewCommand}" Style="{StaticResource FilterButtonStyle}"/>
            <Button Content="Yearly View" Command="{Binding YearlyViewCommand}" Style="{StaticResource FilterButtonStyle}"/>
            <Button Content="Refresh" Command="{Binding RefreshCommand}" Style="{StaticResource FilterButtonStyle}"/>
            <Button Content="Print Grid" Click="Print_Click"
                    Background="#E91E63" Foreground="White" FontWeight="Bold"
                    Width="120" Height="30" Margin="20,0,0,0"/>
        </StackPanel>

        <!-- Summary -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Border Background="White" CornerRadius="10" Padding="20" Margin="10" Width="250" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Total Orders" FontWeight="Bold" FontSize="14" Foreground="#555"/>
                    <TextBlock Text="{Binding TotalOrders}" FontSize="22" FontWeight="Bold" Foreground="#333"/>
                </StackPanel>
            </Border>
            <Border Background="White" CornerRadius="10" Padding="20" Margin="10" Width="250" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Total Revenue" FontWeight="Bold" FontSize="14" Foreground="#555"/>
                    <TextBlock Text="{Binding TotalRevenue, StringFormat=£{0:F2}}" FontSize="22" FontWeight="Bold" Foreground="#333"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- DataGrid -->
        <Border Grid.Row="3" Background="White" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
            <DataGrid x:Name="SalesDataGrid"
                      ItemsSource="{Binding FilteredSales}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      Margin="10"
                      AlternatingRowBackground="#FAFAFA"
                      RowHeight="32">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=d}" Width="*" />
                    <DataGridTextColumn Header="JustEat (orders)" Binding="{Binding OrdersJustEat}" Width="*" />
                    <DataGridTextColumn Header="Uber (orders)" Binding="{Binding OrdersUber}" Width="*" />
                    <DataGridTextColumn Header="Deliveroo (orders)" Binding="{Binding OrdersDeliveroo}" Width="*" />
                    <DataGridTextColumn Header="InHouse (orders)" Binding="{Binding OrdersInHouse}" Width="*" />
                    <DataGridTextColumn Header="JustEat (£)" Binding="{Binding AmountJustEat, StringFormat=£{0:F2}}" Width="*" />
                    <DataGridTextColumn Header="Uber (£)" Binding="{Binding AmountUber, StringFormat=£{0:F2}}" Width="*" />
                    <DataGridTextColumn Header="Deliveroo (£)" Binding="{Binding AmountDeliveroo, StringFormat=£{0:F2}}" Width="*" />
                    <DataGridTextColumn Header="InHouse (£)" Binding="{Binding AmountInhouse, StringFormat=£{0:F2}}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Footer -->
        <Button Grid.Row="4" Content="Exit"
                Width="100" Height="35"
                HorizontalAlignment="Right"
                Margin="0,10,10,0"
                Background="#444" Foreground="White"
                Click="Exit_Click"/>
    </Grid>
</Window>
