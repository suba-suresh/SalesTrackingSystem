<Window x:Class="SalesTrackingSystem.Views.ExpenseView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SalesTrackingSystem.ViewModels"
        Title="Expense Tracker Dashboard"
        Icon="/Images/logo.ico"
        Width="1100" Height="650"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <Window.DataContext>
        <vm:ExpenseViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="Expense Tracker Dashboard" 
                       FontSize="26" 
                       FontWeight="Bold" 
                       Foreground="#2B5797"/>
            <TextBlock Text="Monitor daily expenses and payment breakdown"
                       FontSize="14" 
                       Foreground="Gray" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- INPUT FORM -->
        <Border Grid.Row="1" 
                Padding="20" 
                Background="White" 
                CornerRadius="10" 
                BorderBrush="#DDD" 
                BorderThickness="1"
                Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Input Fields -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Date -->
                    <StackPanel Grid.Column="0" Margin="0,0,15,0">
                        <TextBlock Text="Date:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding NewExpense.Date}" Height="32"/>
                    </StackPanel>

                    <!-- Category -->
                    <StackPanel Grid.Column="1" Margin="0,0,15,0">
                        <TextBlock Text="Category:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewExpense.Category, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="32"
                                 VerticalContentAlignment="Center"
                                 Padding="8,0"/>
                    </StackPanel>

                    <!-- Payment Type -->
                    <StackPanel Grid.Column="2" Margin="0,0,15,0">
                        <TextBlock Text="Payment Type:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox Height="32"
                                  SelectedValue="{Binding NewExpense.PaymentType, Mode=TwoWay}"
                                  SelectedValuePath="Content">
                            <ComboBoxItem Content="Cash" IsSelected="True"/>
                            <ComboBoxItem Content="Card"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Amount -->
                    <StackPanel Grid.Column="3">
                        <TextBlock Text="Amount (£):" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewExpense.Amount, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" 
                                 Height="32"
                                 VerticalContentAlignment="Center"
                                 Padding="8,0"/>
                    </StackPanel>
                </Grid>

                <!-- Buttons -->
                <StackPanel Grid.Row="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,20,0,0">

                    <!-- Add Button -->
                    <Button Content="Add Expense" 
                            Command="{Binding AddExpenseCommand}" 
                            Width="130" 
                            Height="38" 
                            Margin="5"
                            FontWeight="Bold"
                            FontSize="13"
                            Cursor="Hand"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="5"
                                        BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#4CAF50"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#45A049"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#CCCCCC"/>
                                        <Setter Property="Foreground" Value="#666666"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Delete Button -->
                    <Button Content="Delete Selected" 
                            Command="{Binding DeleteExpenseCommand}" 
                            Width="130" 
                            Height="38" 
                            Margin="5"
                            FontWeight="Bold"
                            FontSize="13"
                            Cursor="Hand"
                            Background="#F44336"
                            Foreground="White"
                            BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="5"
                                        BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#F44336"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#D32F2F"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#CCCCCC"/>
                                        <Setter Property="Foreground" Value="#666666"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Clear Button -->
                    <Button Content="Clear Form" 
                            Command="{Binding ClearCommand}" 
                            Width="110" 
                            Height="38" 
                            Margin="5"
                            FontWeight="Bold"
                            FontSize="13"
                            Cursor="Hand"
                            Background="#9E9E9E"
                            Foreground="White"
                            BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="5"
                                        BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#9E9E9E"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#757575"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Print button (new) -->
                    <Button Content="Print" Width="130" Height="38" Margin="5" FontSize="13" Click="Print_Click" Background="#E91E63" Foreground="White" FontWeight="Bold" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- DATAGRID -->
        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding Expenses}" 
                  SelectedItem="{Binding SelectedExpense, Mode=TwoWay}"
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  IsReadOnly="True"
                  SelectionMode="Single"
                  BorderBrush="#DDD"
                  BorderThickness="1"
                  GridLinesVisibility="Horizontal"
                  AlternationCount="2"
                  RowHeight="35"
                  HeadersVisibility="Column">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#2B5797"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                    <Setter Property="BorderBrush" Value="White"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" 
                                    Binding="{Binding Date, StringFormat=dd/MM/yyyy}" 
                                    Width="150"/>
                <DataGridTextColumn Header="Category" 
                                    Binding="{Binding Category}" 
                                    Width="*"/>
                <DataGridTextColumn Header="Payment Type" 
                                    Binding="{Binding PaymentType}" 
                                    Width="150"/>
                <DataGridTextColumn Header="Amount (£)" 
                                    Binding="{Binding Amount, StringFormat=£{0:N2}}" 
                                    Width="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- TOTALS -->
        <Border Grid.Row="3" 
                Background="White" 
                Padding="20" 
                CornerRadius="10" 
                BorderBrush="#DDD" 
                BorderThickness="1"
                Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                    <TextBlock Text="Cash: " 
                               FontWeight="Bold" 
                               FontSize="15" 
                               Foreground="#666"/>
                    <TextBlock Text="{Binding TotalCash, StringFormat=£{0:F2}}" 
                               FontSize="15" 
                               FontWeight="Bold"
                               Foreground="#4CAF50"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                    <TextBlock Text="Card: " 
                               FontWeight="Bold" 
                               FontSize="15" 
                               Foreground="#666"/>
                    <TextBlock Text="{Binding TotalCard, StringFormat=£{0:F2}}" 
                               FontSize="15" 
                               FontWeight="Bold"
                               Foreground="#2196F3"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Grand Total: " 
                               FontWeight="Bold" 
                               FontSize="17" 
                               Foreground="#2B5797"/>
                    <TextBlock Text="{Binding TotalAmount, StringFormat=£{0:F2}}" 
                               FontSize="17" 
                               FontWeight="Bold"
                               Foreground="#2B5797"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>