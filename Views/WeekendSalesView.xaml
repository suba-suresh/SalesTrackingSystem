<Window x:Class="SalesTrackingSystem.Views.WeekendSalesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weekend Sales Dashboard"
        Icon="/Images/logo.ico"
        Height="650" Width="950"
        MinHeight="600" MinWidth="850"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Reusable Styles -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#D9D9D9" BlurRadius="8" ShadowDepth="1" Opacity="0.35"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="CardValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#222"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Grid.Row="0"
                   Text="Weekend Sales Performance"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#2B5797"
                   HorizontalAlignment="Center"
                   Margin="0,8,0,14"/>

        <!-- DATE FILTER -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6,0,12">
            <TextBlock Text="Select Week:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
            <DatePicker SelectedDate="{Binding SelectedWeekDate, Mode=TwoWay}" Width="160" Margin="0,0,8,0"/>
            <Button Content="Load Week"
                    Command="{Binding LoadWeekendDataCommand}"
                    Width="100" Height="34" Margin="4,0"
                    Background="#1976D2" Foreground="White" BorderThickness="0" Cursor="Hand"/>
            <Button Content="Refresh"
                    Command="{Binding RefreshCommand}"
                    Width="100" Height="34" Margin="4,0"
                    Background="#4CAF50" Foreground="White" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>

        <!-- DASHBOARD: center column with max width for responsiveness -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid HorizontalAlignment="Center">
                <!-- Constrain content so it looks good on wide screens but still shrinks -->
                <Grid Width="Auto" MaxWidth="820">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Weekend Period -->
                    <Border Grid.Row="0" Style="{StaticResource CardStyle}" Background="#E3F2FD">
                        <StackPanel>
                            <TextBlock Text="Weekend Period" Style="{StaticResource CardTitle}" Foreground="#1565C0"/>
                            <TextBlock Text="{Binding WeekendDateRange}" 
                                       FontSize="18" FontWeight="Bold"
                                       Foreground="#1565C0" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Revenue -->
                    <Border Grid.Row="1" Style="{StaticResource CardStyle}" Background="#E8F5E9">
                        <StackPanel>
                            <TextBlock Text="Total Weekend Revenue" Style="{StaticResource CardTitle}" Foreground="#2E7D32"/>
                            <TextBlock Text="{Binding TotalWeekendRevenue, StringFormat=£{0:N2}}"
                                       Style="{StaticResource CardValue}" Foreground="#1B5E20" TextAlignment="Center"/>
                            <TextBlock Text="{Binding WeekendSummary}" FontSize="14" Foreground="#555" TextAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Best Day -->
                    <Border Grid.Row="2" Style="{StaticResource CardStyle}" Background="#F3E5F5">
                        <StackPanel>
                            <TextBlock Text="Best Performing Day" Style="{StaticResource CardTitle}" Foreground="#6A1B9A"/>
                            <TextBlock Text="{Binding BestDay}" FontSize="22" FontWeight="Bold" Foreground="#6A1B9A" TextAlignment="Center"/>
                            <TextBlock Text="{Binding BestDayRevenue, StringFormat=£{0:N2}}" FontSize="16" Foreground="#6A1B9A" TextAlignment="Center"/>
                            <TextBlock Text="{Binding BestDayDetails}" FontSize="13" Foreground="#777" TextAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Comparison -->
                    <Border Grid.Row="3" Style="{StaticResource CardStyle}" Background="#E1F5FE">
                        <StackPanel>
                            <TextBlock Text="Saturday vs Sunday Comparison" Style="{StaticResource CardTitle}" Foreground="#01579B"/>
                            <Grid Margin="0,6,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                    <TextBlock Text="Saturday" FontSize="13" Foreground="#555" TextAlignment="Center"/>
                                    <TextBlock Text="{Binding SaturdayRevenue, StringFormat=£{0:N2}}"
                                               FontSize="20" FontWeight="Bold" Foreground="#01579B" TextAlignment="Center"/>
                                </StackPanel>

                                <TextBlock Grid.Column="1" Text="vs" FontSize="16" Foreground="#999" VerticalAlignment="Center" Margin="12,0"/>

                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                    <TextBlock Text="Sunday" FontSize="13" Foreground="#555" TextAlignment="Center"/>
                                    <TextBlock Text="{Binding SundayRevenue, StringFormat=£{0:N2}}"
                                               FontSize="20" FontWeight="Bold" Foreground="#01579B" TextAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                            <TextBlock Text="{Binding RevenueComparison}" FontSize="13" Foreground="#333" TextAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Channel Breakdown -->
                    <Border Grid.Row="4" Style="{StaticResource CardStyle}" Background="#FCE4EC">
                        <StackPanel>
                            <TextBlock Text="Revenue by Channel" Style="{StaticResource CardTitle}" Foreground="#C2185B"/>
                            <!-- UniformGrid used for equal channel cards -->
                            <UniformGrid Columns="4" HorizontalAlignment="Stretch" Margin="0,8,0,0">
                                <StackPanel HorizontalAlignment="Center" Margin="6">
                                    <TextBlock Text="JustEat" FontSize="13" Foreground="#777" TextAlignment="Center"/>
                                    <TextBlock Text="{Binding JustEatTotal, StringFormat=£{0:N2}}"
                                               FontSize="18" FontWeight="Bold" Foreground="#C2185B" TextAlignment="Center"/>
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Center" Margin="6">
                                    <TextBlock Text="Uber" FontSize="13" Foreground="#777" TextAlignment="Center"/>
                                    <TextBlock Text="{Binding UberTotal, StringFormat=£{0:N2}}"
                                               FontSize="18" FontWeight="Bold" Foreground="#C2185B" TextAlignment="Center"/>
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Center" Margin="6">
                                    <TextBlock Text="Deliveroo" FontSize="13" Foreground="#777" TextAlignment="Center"/>
                                    <TextBlock Text="{Binding DeliverooTotal, StringFormat=£{0:N2}}"
                                               FontSize="18" FontWeight="Bold" Foreground="#C2185B" TextAlignment="Center"/>
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Center" Margin="6">
                                    <TextBlock Text="InHouse" FontSize="13" Foreground="#777" TextAlignment="Center"/>
                                    <TextBlock Text="{Binding InHouseTotal, StringFormat=£{0:N2}}"
                                               FontSize="18" FontWeight="Bold" Foreground="#C2185B" TextAlignment="Center"/>
                                </StackPanel>
                            </UniformGrid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>

        <!-- FOOTER -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,8">
            <Button Content="Print Report" 
                    Command="{Binding PrintCommand}"
                    Background="#2196F3" Foreground="White"
                    Width="140" Height="40" Margin="8" BorderThickness="0" Cursor="Hand"/>
            <Button Content="Close"
                    Click="Close_Click"
                    Background="#757575" Foreground="White"
                    Width="140" Height="40" Margin="8" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
