<Window x:Class="SalesTrackingSystem.Views.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SaiHarini Foods"
        WindowStartupLocation="CenterScreen"
        Height="500" Width="900"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main Buttons -->
            <RowDefinition Height="Auto"/>
            <!-- Print Button -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#2B5797" Padding="20" Grid.Row="0">
            <TextBlock Text="SaiHarini Foods"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Center Buttons -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Row 1 -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="Sales" Width="150" Height="50" Margin="10"
                        FontSize="16" Background="#4CAF50" Foreground="White"
                        Click="OpenSales_Click"/>
                <Button Content="Salary" Width="150" Height="50" Margin="10"
                        FontSize="16" Background="#2196F3" Foreground="White"
                        Click="OpenSalary_Click"/>
                <Button Content="Expenses" Width="150" Height="50" Margin="10"
                        FontSize="16" Background="#FF9800" Foreground="White"
                        Click="OpenExpenses_Click"/>
            </StackPanel>

            <!-- Row 2 -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,10">
                <Button Content="Weekly Sales" Width="170" Height="45" Margin="10"
                        FontSize="15" Background="#607D8B" Foreground="White"
                        Click="OpenWeeklySales_Click"/>
                <Button Content="Monthly Sales" Width="170" Height="45" Margin="10"
                        FontSize="15" Background="#9C27B0" Foreground="White"
                        Click="OpenMonthlySales_Click"/>
            </StackPanel>

        </StackPanel>

        
                
    </Grid>
</Window>
