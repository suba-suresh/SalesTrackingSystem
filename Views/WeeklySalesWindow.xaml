<Window x:Class="SalesTrackingSystem.Views.WeeklySalesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weekly Sales" Height="480" Width="760"
        WindowStartupLocation="CenterOwner"
        Background="#FAFAFA">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Weekly Sales Summary"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,8"/>

        <!-- Controls: DatePicker, Load, Print -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8">
            <TextBlock Text="Week containing:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <DatePicker SelectedDate="{Binding SelectedDate}" Width="150"/>
            <Button Content="Load Week" Command="{Binding LoadWeekCommand}" Margin="12,0" Width="100"/>
            <Button Content="Print" Width="100" Margin="12,0" Click="Print_Click" Background="#E91E63" Foreground="White"/>
        </StackPanel>

        <DataGrid x:Name="WeeklyDataGrid"
                  Grid.Row="2"
                  ItemsSource="{Binding WeeklySummary}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Margin="0,12,0,12"
                  AlternatingRowBackground="#F9F9F9">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Day" Binding="{Binding Day}" Width="140"/>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="140"/>
                <DataGridTextColumn Header="Total Orders" Binding="{Binding TotalOrders}" Width="140"/>
                <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount, StringFormat=£{0:F2}}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Close" Width="100" Click="Close_Click" Margin="0,0,8,0"/>
        </StackPanel>
    </Grid>
</Window>
