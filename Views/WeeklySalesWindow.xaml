<Window x:Class="SalesTrackingSystem.Views.WeeklySalesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weekly Sales"
        Height="480" Width="760"
        MinHeight="440" MinWidth="700"
        Icon="/Images/logo.ico"
        WindowStartupLocation="CenterOwner"
        Background="#FAFAFA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Weekly Sales Summary"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8">
            <TextBlock Text="Week containing:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <DatePicker SelectedDate="{Binding SelectedDate}" Width="150" Margin="0,0,8,0"/>
            <Button Content="Load Week" Command="{Binding LoadWeekCommand}" Width="100" Margin="8,0"/>
            <Button Content="Print" Width="100" Margin="8,0" Click="Print_Click"
                    Background="#E91E63" Foreground="White"/>
        </StackPanel>

        <Border Grid.Row="2" Background="White" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1" Margin="0,12">
            <DataGrid x:Name="WeeklyDataGrid"
                      ItemsSource="{Binding WeeklySummary}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      Margin="10"
                      AlternatingRowBackground="#F9F9F9">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Day" Binding="{Binding Day}" Width="*" />
                    <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*" />
                    <DataGridTextColumn Header="Total Orders" Binding="{Binding TotalOrders}" Width="*" />
                    <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount, StringFormat=£{0:F2}}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Close" Width="100" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
