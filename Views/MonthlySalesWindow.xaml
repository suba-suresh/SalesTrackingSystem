<Window x:Class="SalesTrackingSystem.Views.MonthlySalesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Monthly Sales Overview" Height="600" Width="900"
        Icon="/Images/logo.ico"
        WindowStartupLocation="CenterOwner"
        Background="#FAFAFA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Controls -->
            <RowDefinition Height="Auto"/>
            <!-- Summary Cards -->
            <RowDefinition Height="*"/>
            <!-- Grid -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Text="Monthly Sales Overview"
                   FontSize="22" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- CONTROLS -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <TextBlock Text="Select Month:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <DatePicker SelectedDate="{Binding SelectedDate}" Width="150"/>
            <Button Content="Load Month" Command="{Binding LoadMonthCommand}" Width="100" Margin="12,0"/>
            <Button Content="Print" Width="100" Margin="12,0" Click="Print_Click" Background="#E91E63" Foreground="White"/>
        </StackPanel>

        <!-- SUMMARY CARDS -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
            <Border Background="White" CornerRadius="10" Padding="20" Margin="10" Width="180" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Total Orders" FontWeight="Bold" Foreground="#444"/>
                    <TextBlock Text="{Binding TotalOrders}" FontSize="20" FontWeight="Bold" Foreground="#222"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="10" Padding="20" Margin="10" Width="180" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Total Revenue (£)" FontWeight="Bold" Foreground="#444"/>
                    <TextBlock Text="{Binding TotalRevenue, StringFormat={}{0:F2}}" FontSize="20" FontWeight="Bold" Foreground="#222"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="10" Padding="20" Margin="10" Width="180" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Avg. Daily Sales (£)" FontWeight="Bold" Foreground="#444"/>
                    <TextBlock Text="{Binding AverageDailySales, StringFormat={}{0:F2}}" FontSize="20" FontWeight="Bold" Foreground="#222"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="10" Padding="20" Margin="10" Width="200" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Best Day (Revenue)" FontWeight="Bold" Foreground="#444"/>
                    <TextBlock Text="{Binding HighestDayDisplay}" FontSize="14" FontWeight="Bold" Foreground="#222" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- WEEKLY SUMMARY GRID -->
        <DataGrid x:Name="MonthlyDataGrid"
                  Grid.Row="3"
                  ItemsSource="{Binding WeeklyBreakdown}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Margin="0,10,0,10"
                  AlternatingRowBackground="#F9F9F9">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Week" Binding="{Binding WeekName}" Width="150"/>
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate}" Width="150"/>
                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate}" Width="150"/>
                <DataGridTextColumn Header="Total Orders" Binding="{Binding TotalOrders}" Width="150"/>
                <DataGridTextColumn Header="Total Amount (£)" Binding="{Binding TotalAmount, StringFormat={}{0:F2}}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- FOOTER -->
        <Button Grid.Row="4" Content="Close"
                Width="100" Height="35"
                HorizontalAlignment="Right" Margin="0,10,10,0"
                Click="Close_Click"/>
    </Grid>
</Window>
