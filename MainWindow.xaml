<Window x:Class="SalesTrackingSystem.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sales Tracker"
        Icon="/Images/logo.ico"
        Height="700" Width="1200"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <!-- Main outer grid -->
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Text="Daily Sales Management"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#2B5797"
                   Margin="0,0,0,15"/>

        <!-- Date Filter -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal"
                    Margin="0,0,0,15" VerticalAlignment="Center">
            <TextBlock Text="Filter by date:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker SelectedDate="{Binding FilterDate}" Width="150" Margin="0,0,10,0"/>
            <Button Content="Clear"
                    Command="{Binding ClearCommand}"
                    Width="100" Height="32"
                    Background="#9E9E9E" Foreground="White"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="2" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <!-- left panel width stays roughly similar but flexible -->
                <ColumnDefinition Width="Auto" MinWidth="380" MaxWidth="450"/>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Form -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="10"
                    Padding="20"
                    BorderBrush="#DDD"
                    BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <TextBlock Text="Add / Edit Sales"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#2B5797"
                                   Margin="0,0,0,10"/>

                        <!-- Inputs -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Date:" Width="150" VerticalAlignment="Center"/>
                            <DatePicker SelectedDate="{Binding DateInput}" Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="JustEat Orders:" Width="150" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding OrdersJustEatInput}" Width="120"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Uber Orders:" Width="150" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding OrdersUberInput}" Width="120"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Deliveroo Orders:" Width="150" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding OrdersDeliverooInput}" Width="120"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="InHouse Orders:" Width="150" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding OrdersInHouseInput}" Width="120"/>
                        </StackPanel>

                        <Separator Margin="0,8"/>

                        <TextBlock Text="Amounts (£)" FontWeight="Bold" Margin="0,8,0,4"/>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="JustEat:" Width="150" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding AmountJustEatInput}" Width="120"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Uber:" Width="150" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding AmountUberInput}" Width="120"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Deliveroo:" Width="150" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding AmountDeliverooInput}" Width="120"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="InHouse:" Width="150" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding AmountInHouseInput}" Width="120"/>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel HorizontalAlignment="Center" Margin="0,20,0,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Save" Command="{Binding SaveCommand}" Width="100" Height="35" Margin="6"
                                        Background="#4CAF50" Foreground="White"
                                        IsEnabled="{Binding CanSave}"/>
                                <Button Content="Update" Command="{Binding UpdateCommand}" Width="100" Height="35" Margin="6"
                                        Background="#2196F3" Foreground="White"
                                        IsEnabled="{Binding CanUpdate}"/>
                                <Button Content="Delete" Command="{Binding DeleteCommand}" Width="100" Height="35" Margin="6"
                                        Background="#F44336" Foreground="White"
                                        IsEnabled="{Binding CanDelete}"/>
                            </StackPanel>

                            <Button Content="View Sales"
                                    Command="{Binding ViewSalesCommand}"
                                    Width="150" Height="40"
                                    Margin="0,15,0,0"
                                    Background="#673AB7" Foreground="White"
                                    FontWeight="Bold"
                                    HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right DataGrid -->
            <Border Grid.Column="2" Background="White" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
                <DataGrid ItemsSource="{Binding Sales}"
                          SelectedItem="{Binding SelectedSale, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          Margin="10"
                          AlternatingRowBackground="#FAFAFA"
                          GridLinesVisibility="Horizontal"
                          RowHeight="32">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" Width="*" />
                        <DataGridTextColumn Header="JustEat" Binding="{Binding OrdersJustEat}" Width="*" />
                        <DataGridTextColumn Header="Uber" Binding="{Binding OrdersUber}" Width="*" />
                        <DataGridTextColumn Header="Deliveroo" Binding="{Binding OrdersDeliveroo}" Width="*" />
                        <DataGridTextColumn Header="InHouse" Binding="{Binding OrdersInHouse}" Width="*" />
                        <DataGridTextColumn Header="Total Orders" Binding="{Binding TotalOrders}" Width="*" />
                        <DataGridTextColumn Header="Total (£)" Binding="{Binding TotalAmount, StringFormat={}{0:F2}}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>
